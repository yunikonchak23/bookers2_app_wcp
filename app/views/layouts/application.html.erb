<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="header">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand" href="/"><span>Bookers</span></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown" style="">
              <ul class="navbar-nav ml-auto">

                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "Home",user_path(current_user), class:'fas fa-home nav-link text-light' %>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-users nav-link text-light" href="/users">Users</a>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-book-open nav-link text-light" href="/books">Books</a>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out">logout</a>
                  </li>

                <% else %>
                  <li class="nav-item">
                    <a class="fas fa-home nav-link text-light" href="/"> Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-link nav-link text-light" href="/home/about"> About</a>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-user-plus nav-link text-light" href="/users/sign_up"> sign up</a>
                  </li>
                  <li class="nav-item">
                    <a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in"> login</a>
                  </li>
                <% end %>

              </ul>
            </div>
          </div>
        </nav>

      </div>
    </header>

    <div class="body">
      <p class="notice"><%= notice %></p>
    <%= yield %>

    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
    </div>
  </body>
</html>
