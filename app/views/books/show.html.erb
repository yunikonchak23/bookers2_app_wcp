<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table class="table table-user-show">
  <tr>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= @book.created_at.strftime('%Y/%m/%d') %></td>
    <% if @book.user_id == current_user.id %>
      <td><%= link_to "Destroy", book_path(@book), method: :delete %>
    <% end %>
  </tr>
</table>