<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to (@book.user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>