<table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
          <div class="row">
           <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_41556" href="/users/41556/edit"></a>
          </div>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>